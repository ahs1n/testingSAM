                            android:text="@string/Q_s7q3" />
                    </RelativeLayout>


                    <LinearLayout
                        android:id="@+id/s7q3check"
                        style="@style/vlinearlayout"
                        android:tag="0">

                        <CheckBox
                            android:id="@+id/s7q301"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q301.equals("
                            android:text="@string/s7q301"1")}" />

                        <CheckBox
                            android:id="@+id/s7q302"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q302.equals("
                            android:text="@string/s7q302"2")}" />

                        <CheckBox
                            android:id="@+id/s7q303"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q303.equals("
                            android:text="@string/s7q303"3")}" />

                        <CheckBox
                            android:id="@+id/s7q304"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q304.equals("
                            android:text="@string/s7q304"4")}" />

                        <CheckBox
                            android:id="@+id/s7q305"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q305.equals("
                            android:text="@string/s7q305"5")}" />

                        <CheckBox
                            android:id="@+id/s7q306"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q306.equals("
                            android:text="@string/s7q306"6")}" />

                        <CheckBox
                            android:id="@+id/s7q307"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q307.equals("
                            android:text="@string/s7q307"7")}" />

                        <CheckBox
                            android:id="@+id/s7q308"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q308.equals("
                            android:text="@string/s7q308"8")}" />

                        <CheckBox
                            android:id="@+id/s7q309"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q309.equals("
                            android:text="@string/s7q309"9")}" />

                        <CheckBox
                            android:id="@+id/s7q396"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="@{formsContract.s7q396.equals("
                            android:text="@string/s7q396"10")}" />

                        <EditText
                            android:id="@+id/s7q396x"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_marginBottom="12dp"
                            android:hint="@string/s7q396"
                            android:tag="s7q396"
                            android:text='@{s7q396.checked ? formsContract.s7q396x.toString() : ""}'
                            android:visibility='@{s7q396.checked? View.VISIBLE : View.GONE}' />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView><!--EndButton LinearLayout-->
            <LinearLayout
                style="@style/hlinearlayout"
                android:layout_gravity="end"
                android:layout_marginTop="18dp">

                <Button
                    android:id="@+id/btn_End"
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />

                <Button
                    android:id="@+id/btn_End"
                    style="@style/btnEnd"
                    android:onClick="@{() -> callback.BtnEnd()}"
                    android:text="End" />
                <!--EndButton LinearLayout-->
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>